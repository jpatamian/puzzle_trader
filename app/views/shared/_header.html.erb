<section class="hero is-primary is-small">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <%= link_to root_path, class: "navbar-item" do %>
            <span class="has-text-white is-size-4">Puzzle Trader</span>
          <% end %>
        </div>
      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <% if content_for(:title) %>
          <%= yield :title %>
        <% else %>
          Puzzle Trader
        <% end %>
      </h1>
      <h2 class="subtitle">
        For Puzzle Enthusiasts
      </h2>
    </div>
  </div>

  <!-- Hero footer: will stick at the bottom -->
  <div class="hero-foot">
    <nav class="tabs">
      <div class="container">
        <ul>
          <li>
            <%= link_to "Create New Post", new_post_path %>
          </li>
          <li><%= link_to "See Your Posts", posts_path %></li>
        </ul>
      </div>
    </nav>
  </div>
</section>
